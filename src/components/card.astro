---
interface Props {
  titulo?: string;
  contenido?: string;
}

const { titulo = "No hay titulo", contenido = "No hay contenido" } =
  Astro.props;
---

<meta charset="UTF-8" />

<div class="bg-slate-500 p-4 m-2 mb-3 border-r-4">
  <h1>{titulo}</h1>
  <p>
    {contenido}
  </p>
</div>

<style>
  .card {
    border-radius: 5px;
    box-shadow: 0 2px 4px 0 rgba(0, 0, 0, 0.2), 0 25px 50px 0 rgba(0, 0, 0, 0.1);
    padding: 20px;
    width: 300px;
    margin-bottom: 5px;
  }
</style>
